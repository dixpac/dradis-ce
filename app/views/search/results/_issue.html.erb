<%= content_tag(:span, "", class: "fa fa-bug")  %>
<% if row.title? %>
  <%= link_to row.title.to_s, issue_path(row.id),
    class: "search-match-title" %>
<% else %>
  <%= link_to "Issue ##{row.id}", issue_path(row.id),
    class: "search-match-title" %>
<% end %>
<%= content_tag :p, "Last updated: " + time_ago_in_words(row.updated_at) + "ago",
  class: "search-updated-ago" %>
<div class="match-snippet">
  <%= text_snippet row.text, params[:q] %>
</div>
