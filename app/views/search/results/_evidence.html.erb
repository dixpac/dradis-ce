<%= content_tag(:span, "", class: "fa fa-flag")  %>
<% if row.title? %>
  <%= link_to row.title.to_s, node_evidence_path(row.node_id, row),
    class: "search-match-link" %>
<% else %>
  <%= link_to "Evidence ##{row.id}", node_evidence_path(row.node_id, row),
    class: "search-match-link" %>
<% end %>
<%= content_tag :p, "Last updated: " + time_ago_in_words(row.updated_at) + "ago",
  class: "search-updated-ago" %>
<%= content_tag(:span, format_match_row(row.content, params[:q]), class: "search-match") %>
