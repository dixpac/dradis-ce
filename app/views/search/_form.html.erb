<%= form_tag search_path, method: :get do |f| %>
  <%= content_tag :div, class: "control-group input-append" do %>
    <%= hidden_field_tag :scope, params[:scope] %>
    <%= search_field_tag :q, params[:q], placeholder: "Search nodes, issues, etc...", autofocus: true  %>
    <%= button_tag "Search", class: "btn" %>
  <% end %>
<% end %>
